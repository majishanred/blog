<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, placeholder: "Enter your post's title here", class: "form-control"%>
  </div>
  <div class="mb-4">
    <%= form.label :text, class: "form-label" %>
    <%= form.text_field :text, placeholder: "Enter your post's text here", class: "form-control" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
