<p style="color: green"><%= notice %></p>
<div class="container row justify-content-center">
  <div class=" row border rounded-4 p-4 mb-4" style="width: 720px">
    <%= render @post %>
    <div>
      <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary" %>
      <%= link_to "Destroy this post", @post, class: "btn btn-danger", data: {
        turbo_method: :delete
      } %>
    </div>
  </div>
  <div class="row" style="width: 720px">
      <%= render partial: "users/user", locals: {user: @author } %>
    </div>
</div>
